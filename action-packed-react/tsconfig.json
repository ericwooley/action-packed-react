{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "umd",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strict": true,
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "../node_modules/@types", "types"],
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__snapshots__/**/*",
    "dist/**/*",
    "**/*.test.ts*"
  ]
}
